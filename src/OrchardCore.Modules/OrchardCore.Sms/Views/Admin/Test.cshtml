@using OrchardCore
@using OrchardCore.Sms.ViewModels

@model SmsTestViewModel

<zone Name="Title"><h1>@RenderTitleSegments(T["Settings"])</h1></zone>

@if (Model.Providers == null || Model.Providers.Count == 0)
{
    <div class="alert alert-danger" role="alert">
        @T["No SMS providers are currently enabled. Please enable at least one SMS provider feature."]
    </div>

    return;
}

<form method="post" class="no-multisubmit">
    @Html.ValidationSummary()

    <div class="mb-3">
        <label asp-for="Provider" class="form-label">@T["Provider"]</label>
        <select class="form-select" asp-for="Provider" asp-items="Model.Providers">
            <option value="">@T["Select a provider"]</option>
        </select>
    </div>

    <div class="@Orchard.GetWrapperClasses()" asp-validation-class-for="PhoneNumber">
        <label asp-for="PhoneNumber" class="@Orchard.GetLabelClasses()">@T["Phone Number"]</label>
        <div class="@Orchard.GetEndClasses()">
            <input asp-for="PhoneNumber" class="form-control" type="tel" />
            <span>@T["Phone number must include a country code. For example, +1 for United States."]</span>
        </div>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">@T["Send"]</button>
    </div>
</form>

